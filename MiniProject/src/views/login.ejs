<div class="container ">
    <div class="row">
        <div class="col col-12 col-sm-12 col-md-2 col-lg-3 col-xl-3"></div>
        <div class="col col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 border border-danger rounded my-2 py-3">
            <h3 class="text-center text-success">Admin Login</h3>

            <form action="" method="post">
                <div class="form-group">
                    <label for="admin">Username : </label>
                    <input type="text" class="form-control" name="admin" id="admin" aria-describedby="helpId"
                        placeholder="">
                    <small id="helpId" class="form-text text-muted">Help text</small>
                </div>
                <div class="form-group">
                    <label for="pass">Password : </label>
                    <input type="password" class="form-control" name="pass" id="pass" placeholder="">
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>

        </div>
        <div class="col col-12 col-sm-12 col-md-2 col-lg-3 col-xl-3"></div>
    </div>
</div>